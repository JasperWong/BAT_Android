<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:circle_seekbar = "http://schemas.android.com/apk/res/activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:launchMode="singleTask"
    android:screenOrientation="portrait"
   >

    <TextView
        android:text="Project_X   Fan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35dp"
        android:textIsSelectable="true"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <activity.CircleSeekBar
        android:id="@+id/circle_seekbar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:thumb="@drawable/thumb_normal"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp" />

    <activity.StartButton
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/StartButton"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/circle_seekbar" />

</RelativeLayout>
